<div class='custom-section full-width'>
  {% if section.settings.background_image %}
    <div class='custom-section__background'>
      {{ section.settings.background_image | image_url: width: 2000 | image_tag }}
    </div>
  {% endif %}

  {%- capture padding_vars -%}
    {%- render 'padding-vars', settings: section.settings -%}
  {%- endcapture -%}

  <div class='custom-section__content padding' style='{{padding_vars}}'>
    {% content_for 'blocks' %}
  </div>
</div>

{% stylesheet %}
  .custom-section {
    position: relative;
    overflow: hidden;
    width: 100%;
  }
  .custom-section__background {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }
  .custom-section__background img {
    position: absolute;
    width: 100%;
    height: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  /* .custom-section__content {
    display: grid;
    grid-template-columns: var(--content-grid, 1fr);
  } */
  /* .custom-section__content > * {
    grid-column: 2;
  } */
{% endstylesheet %}

